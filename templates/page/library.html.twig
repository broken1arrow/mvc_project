{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}

<main>
    <div>
        <div style="margin: 2em;">
            <div>
                {# style="border-radius: 0.5em;border: 0.2px solid black;background-color: #116811;padding:
                2px;box-shadow: 8px 5px 15px 2px black;">
                #} <form method="post" style="border: none;box-shadow:none;background-color: rgba(0, 0, 0, 0);">
                    <fieldset style="width: 100%;">
                        <div class="header-sub">
                            <div class="left">
                            <input class="table_button" style="margin: 0; padding: 0;cursor: pointer;" type="submit" name="add-book"
                                value="+ add book">
                            </div>
                                <div class="center">
                            <h1 style="margin: 0; padding: 0;grid-column: 4;">Library</h1>
                        </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div>
                <div class="books-grid">
                    {% if books != null %}
                    {% for book in books %}
                    <a href="{{path('library')}}?bookid={{ book.isbn }}" class="books-grid-item">
                        <form method="post" style="border: none;box-shadow:none;background: none !important;">
                            <fieldset style="width: 99%;">
                                <table style="width: 100%;">
                                    <tr>
                                        <th style="position: relative;">
                                            <h2 style="margin-bottom: 0;margin-top: 0;text-align: center;">{{ book.title
                                                }}</h2>

                                            <input type="hidden" name="book-id" value="{{ book.isbn }}" />
                                            <button class="remove-button " type="submit" name="remove-book"></button>

                                            <button class="edit-button" type="submit" name="edit-book"></button>
                                        </th>
                                    </tr>
                                </table>
                            </fieldset>
                        </form>
                        <img src="uploads/{{ book.image }}" onerror="this.src='img/no-image-found.avif';">
                        <div style="display: flex;margin-bottom: 0;font-size: 0.8rem;">
                            <p style="margin-top: 0;margin-bottom: 0;color: antiquewhite;">Author:</p>
                            <p style="margin-top: 0;margin-bottom: 0; margin-left: 0.5em; font-family: cursive;">
                                {{ book.author }}

                            </p>
                        </div>
                        <p style="margin-top: 0.5em;">
                            {{ book.description }}
                        </p>
                    </a>
                    {% endfor %}
                    {% else %}
                    <h1>Nothing found</h1>
                    {% endif %}
                </div>
                <h1>Could still be some bugs, working on sort it out so fast as I could.</h1>
            </div>
        </div>
    </div>
</main>

{% endblock %}